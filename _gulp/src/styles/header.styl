header
	span(1/1)
	background-color #fff
	height 60px
	box-sizing border-box
	padding 10px
	border-top 8px solid #dc4747
	box-shadow 0 0 4px 1px rgba(0,0,0,.4)
	position relative
	z-index 9999
	img
		height 35px
	div
		span(2/5)
		float right
		text-align right
		font-size 13px
		color #000
		.add
			background-color #e67e22
			padding 10px
			color #fff
			text-decoration none
			border-radius 3px
			display inline-block
			margin-left 10px
			margin-top -3px
		.compare
			background-color #3498db
			padding 8px
			color #fff
			text-decoration none
			border-radius 3px
			display inline-block
			margin-left 10px
		ul
			margin 0px
			padding 0px
			list-style none
			margin-top 8px
			li
				display inline-block
				border-right 2px solid #dc4747
				&:last-child
					border-right none
				a
					text-decoration none
					padding 5px 10px
					font-weight 600
					color #000
					font-size 14px
					&:hover
						color #dc4747
						